@model CasaDeMusica.DTO.DTOinstrumento
@{
    ViewBag.Title = "Alta";
}

<div class="col-md-2"></div>
<div class="col-md-8">
    <h2>CARGAR NUEVO INSTRUMENTO</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">TIPO INSTRUMENTO</label>
            <div class="col-sm-9">
                @Html.DropDownListFor(x => x.I.Idtipo, new SelectList(Model.Listatipos, "Idtipo", "Nombre"), htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">NOMBRE</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.I.Nombre, htmlAttributes: new { @class = "form-control", @id = "nombre" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">DESCRIPCION</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.I.Descripcion, htmlAttributes: new { @class = "form-control", @id = "descripcion" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">PRECIO</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.I.Precio, htmlAttributes: new { @class = "form-control", @id = "precio" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">STOCK</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(x => x.I.Stock, htmlAttributes: new { @class = "form-control", @id = "stock" })
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" onclick="return validarForm()">ACEPTAR</button>
        </div>
    }
</div>
<div class="col-md-2"></div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
<script src = " https://unpkg.com/sweetalert/dist/sweetalert.min.js " > </script>

<script>
    function validarForm() {
        let txtnombre = document.getElementById("nombre");
        let txtdescripcion = document.getElementById("descripcion").value;
        let precio = document.getElementById("precio");
        let stock = document.getElementById("stock").value;

        if (txtnombre.value === "") {
            swal("ingrese nombre", "debe ingresar un nombre", "warning");
            txtnombre.focus();
            return false;
        }
        if (txtdescripcion === "") {
            alert("ingrese descripcion");
            txtdescripcion.focus();
            return false;
        }
        if (precio == 0) {
            alert("el precio no puede ser 0");
            precio.focus();
            return false;
        }
        if (precio.value === "") {
            alert("ingrese un precio");
            precio.focus();
            return false;
        }
        if (stock === "") {
            alert("ingrese un stock");
            stock.focus();
            return false;
        }
        if (stock == 0) {
            alert("el stock no puede ser 0");
            stock.focus();
            return false;
        }
        if (isNaN(precio.value)) {
            alert("el precio tiene que ser numerico");
            precio.focus();
            return false;
        }
        if (isNaN(stock)) {
            alert("el stock tiene que ser numerico");
            stock.focus();
            return false;
        }
    }
</script>
<script>
    function validacion() {
        if (validarForm()) {

        }
    }
</script>
